{
  "Serilog": {
  	"Using": ["Serilog.Sinks.Console"],
  	"MinimumLevel": {
  		"Default": "Information"
  	},
  	"WriteTo": [
  		{
  			"Name": "Console",
  			"Args": {
  				"outputTemplate": "[{Timestamp:hh:mm:ss}] [{Level:u3}] {Message}{NewLine}{Exception}"
  			}
  		}
  	]
  },
  
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
  	"SqlServer": ""
  },
  
  "Jwt": {
  	"SecretKey": "",
  	"Issuer": "",
  	"Audience": "",
  	"AccessTokenLifetime": "",
  	"RefreshTokenLifetime": ""
  },
  
  "Email": {
  	"Address": "",
  	"Password": ""
  },
  
  "VerificationCode": {
  	"Text": "",
  	"Length": ""
  }
}
