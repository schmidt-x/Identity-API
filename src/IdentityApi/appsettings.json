{
  "Serilog": {
  	"Using": ["Serilog.Sinks.Console"],
  	"MinimumLevel": {
  		"Default": "Information"
  	},
  	"WriteTo": [
  		{
  			"Name": "Console",
  			"Args": {
  				"outputTemplate": "[{Timestamp:hh:mm:ss}] [{Level:u3}] [{ThreadId}] {Message}{NewLine}{Exception}"
  			}
  		}
  	],
  	"Enrich": [ "WithThreadId" ]
  },
  
  "AllowedHosts": "*",
  
  "ConnectionStrings": {
  	"SqlServer": ""
  },
  
  "Jwt": {
  	"SecretKey": "",
  	"Issuer": "https://localhost:7001",
  	"Audience": "https://localhost:7001"
  },
  
  "Email": {
  	"Address": "",
  	"Password": ""
  }
}
